@model IEnumerable<Ecommerce.Models.Bean.AddToCartBean>

@{
    ViewBag.Title = "CartItem";
}

<style type="text/css">
    .TableCss thead
    {
        border-style: none;
        background-color: Maroon;
        width: 100%;
        text-align: center;
    }

    .TableCss1
    {
        border-style: dotted;
        background-color: White;
    }

    .TabHeader
    {
        color: snow;
        font-size: large;
        font-family: Verdana;
        height: 45px;
        text-align: center;
    }

    .data
    {
        color: Black;
        font-family: MS Gothic Sans-Serif;
        font-size: medium;
        font-weight: bold;
        height: 28px;
    }
</style>


<fieldset>
    <legend>Your Cart Item</legend>


    <table class="TableCss" style="width: 100%">
        <thead>
            <tr class="TabHeader">
                <td style="width: 25%"></td>
                <td>Your Item
                </td>
                <td>Quantity
                </td>
                <td>Price
                </td>
                <td>Update/Remove
                </td>
            </tr>
        </thead>


        <tbody>
            @{double amount = 0;}
            <tbody class="TableCss1">
                @using (Html.BeginForm())
                {
                    foreach (Ecommerce.Models.Bean.AddToCartBean bean in Model)
                    {
                    <tr class="data">
                        <td align="left">
                            <img src="~/Data/Image/@bean.ProductImage"  width="70px" height="70px"/>
                        </td>
                        <td align="left">
                            @bean.ProductName
                        </td>
                        <td align="right">
                            @Html.TextBox("CARTBEANS[" + bean.pid + "].ProductQty", @bean.ProductQty, new { style = "width:30px;" })
                        </td>
                        <td align="right">
                            @bean.ProductPrice
                            @{amount = bean.ProductPrice + amount;}
                        </td>
                        <td align="right">
                            <input type="submit" name="ctl00$ContentPlaceHolder1$ListView1$ctrl0$Button1" value="Update" id="ContentPlaceHolder1_ListView1_Button1_0">

                            <a href="~/Purchase/Delete?id=@bean.pid" class="submit">Remove</a>
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </tbody>

        <tfoot>
            <tr>
                <th colspan="3" style="text-align: right">
                    <h2>
                        <br />
                        <br />
                        Total Amount</h2>
                </th>
                <th>
                    <h2>
                        <br />
                        <br />
                        Rs : @amount</h2>
                </th>
                <th align="right">
                    <br />
                    <br />

                </th>
            </tr>
            <tr>
                <th>
                    <br />
                    <br />
                </th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th>
                    <input type="submit" name="Continuewtoshoping" value="Continue" id="Continuewtoshoping" onclick='window.location.href = "/Home/"'>
                </th>
                <th colspan="3"></th>
                <th>
                    <input type="submit" name="BuyNow" value="Buy Now" id="BuyNow" onclick='window.location.href = "/Confirm/"'>
                </th>
            </tr>
        </tfoot>
    </table>






</fieldset>



